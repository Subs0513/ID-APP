/** app.wxss **/
page {
    background: #fff0f5;
    color: #222;
    font-size: 32rpx;
}
.container {
    padding: 24rpx;
}
.card {
    background: #fff;
    border-radius: 18rpx;
    padding: 24rpx;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
    margin-bottom: 18rpx;
}
.row {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.muted {
    color: #888;
    font-size: 26rpx;
}
.title {
    font-size: 34rpx;
    font-weight: 700;
}
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 18rpx 24rpx;
    border-radius: 14rpx;
    background: #e8849f;
    color: #fff;
    font-size: 28rpx;
}
.btn-secondary {
    background: #ffffff;
    color: #e8849f;
    border: 2rpx solid #e8849f;
}
.btn-danger {
    background: #ff4d4f;
    color: #fff;
}
.label {
    margin: 18rpx 0 10rpx;
    color: #555;
    font-size: 26rpx;
}
/* =========================
   ✅ 统一输入框外观（重点）
   标题/日期/类型/备注都使用这一套
   ========================= */
.field {
    width: 100%;
    background: #f7f8fa;
    border-radius: 14rpx;
    box-sizing: border-box;
}
/* 单行字段：高度一致 + 左右内边距一致 */
.field--single {
    height: 96rpx;
    padding: 0 22rpx;
    display: flex;
    align-items: center;
}
/* 单行显示文本 */
.field__text {
    font-size: 30rpx;
    color: #222;
}
/* placeholder 文本颜色 */
.field__placeholder {
    color: #999;
}
/* 真正的 <input>：撑满容器，避免 iOS 裁切 */
.field__input {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    font-size: 30rpx;
    color: #222;
    box-sizing: border-box;
}
/* 多行字段：备注 */
.field--multi {
    padding: 22rpx;
}
/* <textarea>：统一字体与行高 */
.field__textarea {
    width: 100%;
    min-height: 180rpx;
    font-size: 30rpx;
    color: #222;
    line-height: 1.6;
    box-sizing: border-box;
    background: transparent; /* 外壳已经有底色了 */
}
/* picker / 展示用文字：保证真正垂直居中 */
.field__value {
    width: 100%;
    height: 96rpx;
    display: flex;
    align-items: center; /* ✅ 真·垂直居中 */
    font-size: 30rpx;
    color: #222;
}

