























































/* 全屏遮罩 */
.privacy-mask.data-v-7bc190d4 {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.38);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 26rpx;
  z-index: 9999;
}
/* 白色卡片（大圆角） */
.privacy-card.data-v-7bc190d4 {
  width: 100%;
  background: #ffffff;
  border-radius: 36rpx;
  padding: 34rpx 28rpx 28rpx;
  box-sizing: border-box;
  box-shadow: 0 18rpx 60rpx rgba(0, 0, 0, 0.12);
}
/* 标题 */
.privacy-title.data-v-7bc190d4 {
  text-align: center;
  font-size: 34rpx;
  font-weight: 800;
  color: #222;
  letter-spacing: 1rpx;
  margin-bottom: 22rpx;
}
/* 内容滚动区 */
.privacy-content.data-v-7bc190d4 {
  max-height: 560rpx;
  padding: 0 6rpx;
  box-sizing: border-box;
}
/* 段落 */
.p.data-v-7bc190d4 {
  font-size: 28rpx;
  color: #3a3a3a;
  line-height: 46rpx;
}
/* 链接（粉色风格） */
.link.data-v-7bc190d4 {
  font-size: 28rpx;
  color: #ff5f92;
  line-height: 46rpx;
  font-weight: 700;
}
/* 段落间距（避免 text 里不好控制） */
.gap.data-v-7bc190d4 {
  height: 14rpx;
}
/* 按钮行 */
.btn-row.data-v-7bc190d4 {
  display: flex;
  gap: 18rpx;
  margin-top: 26rpx;
}
/* 通用按钮 */
.btn.data-v-7bc190d4 {
  flex: 1;
  height: 90rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
}
/* 不同意：描边按钮 */
.btn.ghost.data-v-7bc190d4 {
  background: #ffffff;
  border: 2rpx solid #e2e2e2;
  color: #555;
}
/* 同意：粉色渐变按钮 */
.btn.primary.data-v-7bc190d4 {
  background: linear-gradient(135deg, #ff86b2, #ff5f92);
  color: #ffffff;
}

