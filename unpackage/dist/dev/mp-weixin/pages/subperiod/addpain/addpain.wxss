/* 页面整体 */
.page {
  padding: 24rpx;
  box-sizing: border-box;
}
/* 顶部按钮 */
.add-btn {
  background: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff6b9d;
  box-sizing: border-box;
}
.btn-active {
  background: #f3f3f3;
}
.icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 12rpx;
}
/* 列表容器 */
.list {
  box-sizing: border-box;
}
/* 空态 */
.empty {
  margin-top: 24rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
}
/* ====== 左滑删除卡片 ====== */
.swipe-item {
  position: relative;
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
/* 删除按钮区（宽度要和 JS 一致） */
.swipe-actions {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 160rpx;
  background: #ff4d4f;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}
/* 内容层（卡片本体） */
.swipe-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-sizing: border-box;
  transition: -webkit-transform 180ms ease;
  transition: transform 180ms ease;
  transition: transform 180ms ease, -webkit-transform 180ms ease;
}
/* 手指拖动中：跟手更顺 */
.no-anim {
  transition: none !important;
}
/* 第一行：左（徽章+次数+时间）右（程度） */
.row1 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.row2 {
  margin-top: 10rpx;
  display: flex;
  gap: 18rpx;
  flex-wrap: wrap;
}
.left {
  display: flex;
  align-items: center;
  min-width: 0;
}
/* “痛”徽章 */
.pain-badge {
  width: 44rpx;
  height: 44rpx;
  border-radius: 999rpx;
  background: rgba(255, 107, 157, 0.18);
  color: #ff6b9d;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 700;
  margin-right: 14rpx;
}
.count {
  color: #111;
  font-size: 32rpx;
  margin-right: 16rpx;
  white-space: nowrap;
  line-height: 32rpx;
}
.time {
  color: #999;
  font-size: 30rpx;
  white-space: nowrap;
  line-height: 30rpx;
}
.right-muted {
  color: #999;
  font-size: 30rpx;
  white-space: nowrap;
}
.meta {
  color: #999;
  font-size: 28rpx;
  white-space: nowrap;
}
/* =======================
   弹窗（仿 love.css 结构）
   ======================= */
/* 遮罩 */
.mask {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 999;
}
/* 居中弹窗 */
.popup {
  position: fixed;
  left: 50%;
  top: 50%;
  bottom: auto;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 92vw;
  max-width: 680rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  z-index: 1000;
  max-height: 80vh;
  overflow-y: auto;
}
.popup-title {
  margin-top: 12rpx;
  text-align: center;
  font-weight: bold;
  margin-bottom: 24rpx;
  font-size: 34rpx;
  color: #111;
}
.card {
  background: #f7f7f7;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
/* 按钮 */
.popup-actions {
  display: flex;
  gap: 20rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.btn {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
}
.cancel {
  color: #ff6b9d;
  background: #f4f4f4;
}
.ok {
  background: #ff6b9d;
  color: #fff;
}
/* 区块头（图标+标题+右侧值） */
.section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.section-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.section-icon {
  width: 34rpx;
  height: 34rpx;
}
.section-title {
  font-size: 28rpx;
  color: #111;
  font-weight: 600;
}
.section-value {
  font-size: 28rpx;
  color: #666;
}
/* 时间滚轮 */
.time-wheel {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.time-picker {
  height: 150rpx; /* 白框更低一点 */
}
.time-item {
  height: 36px;
  line-height: 36px;
  text-align: center;
  font-size: 36rpx;
  color: #111;
}
.time-colon {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  font-size: 40rpx;
  color: #111;
  pointer-events: none;
}
/* 选项白卡打底 */
.option-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 16rpx;
}
/* 选项 chip */
.option-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}
.option-item {
  padding: 16rpx 18rpx;
  border-radius: 999rpx;
  background: #f4f4f4;
}
.option-item.active {
  background: #ffd3e2;
}
.option-text {
  font-size: 26rpx;
  color: #333;
  line-height: 26rpx;
}

