/* pages/home/home.css */
page.data-v-92bb8f34 {
  background-color: #fff0f5;
}
.page.data-v-92bb8f34 {
  min-height: 100vh;
}

/* 顶部自定义导航栏 */
.custom-nav.data-v-92bb8f34 {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  z-index: 9999;
  background: rgba(255, 255, 255, 0);
}
.custom-nav__inner.data-v-92bb8f34 {
  display: flex;
  align-items: center;
  justify-content: center;
}
.custom-nav__title.data-v-92bb8f34 {
  font-size: 34rpx;
  font-weight: 600;
  color: #e8849f;
}

/* 主体容器 */
.container.data-v-92bb8f34 {
  padding: 22rpx 22rpx 0;
  box-sizing: border-box;
}
.page-bottom-space.data-v-92bb8f34 {
  padding-bottom: 160rpx;
}

/* 大卡片（在一起天数） */
.card.data-v-92bb8f34 {
  background: #fff;
  border-radius: 18rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  margin-bottom: 22rpx;
  box-sizing: border-box;
}
.big-card.data-v-92bb8f34 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.big-card-left.data-v-92bb8f34 {
  flex: 1;
  padding-right: 20rpx;
  min-width: 0;
}
.big-title.data-v-92bb8f34 {
  font-size: 46rpx;
  font-weight: 800;
  color: #222;
}
.big-sub.data-v-92bb8f34 {
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #9aa0a6;
}
.big-card-right.data-v-92bb8f34{
  flex-shrink: 0;        /* ✅ 不被压缩 */
  text-align: right;
  display: flex;         /* ✅ 垂直方向更稳 */
  flex-direction: column;
  align-items: flex-end;
}
.big-num.data-v-92bb8f34 {
  font-size: 80rpx;
  font-weight: 900;
  color: #222;
  line-height: 1;
  white-space: nowrap;
}
.big-unit.data-v-92bb8f34 {
  margin-top: 6rpx;
  font-size: 30rpx;
  color: #9aa0a6;
  white-space: nowrap;
}

/* 列表标题 */
.list-header.data-v-92bb8f34 {
  display: flex;
  align-items: center;
  margin: 8rpx 4rpx 16rpx;
}
.list-title.data-v-92bb8f34 {
  display: flex;
  align-items: center;
  font-size: 34rpx;
  font-weight: 800;
  color: #ff74a0;
}
.title-icon.data-v-92bb8f34 {
  width: 46rpx;
  height: 46rpx;
  margin-right: 12rpx;
}
.empty-hint.data-v-92bb8f34 {
  color: #9aa0a6;
  font-size: 28rpx;
  padding: 24rpx 10rpx;
}

/* 列表 */
.list.data-v-92bb8f34 {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-bottom: 8rpx;
}

/* 小卡片 */
.item.data-v-92bb8f34 {
  background: #fff;
  border-radius: 18rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

/* 点击区域 */
.item-main.data-v-92bb8f34 {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 26rpx;
  box-sizing: border-box;
}
.item-left.data-v-92bb8f34 {
  flex: 1;
  padding-right: 16rpx;
  min-width: 0;
}

/* ✅ 只显示标题 */
.item-title.data-v-92bb8f34 {
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
  line-height: 1.2;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 右侧 badge */
.item-right.data-v-92bb8f34 {
  min-width: 240rpx;
  text-align: right;
}
.badge-text.data-v-92bb8f34 {
  font-size: 30rpx;
  color: #222;
}

/* 备用 count */
.count.data-v-92bb8f34 {
  display: flex;
  align-items: baseline;
  justify-content: flex-end;
  gap: 10rpx;
}
.count-num.data-v-92bb8f34 {
  font-size: 52rpx;
  font-weight: 900;
  color: #222;
  line-height: 1;
}
.count-unit.data-v-92bb8f34,
.count-sign.data-v-92bb8f34 {
  font-size: 28rpx;
  color: #9aa0a6;
}

/* ✅ 拖拽态 */
.dragging.data-v-92bb8f34 {
  opacity: 0.88;
  z-index: 10;
  box-shadow: 0 12rpx 34rpx rgba(0, 0, 0, 0.14);
}

/* 空列表提示：做成和列表项一致的卡片，并支持点击跳转 */
.empty-card.data-v-92bb8f34 {
  background: #fff;
  border-radius: 24rpx;
  padding: 26rpx 28rpx;
  margin-top: 16rpx;
  box-shadow: 0 10rpx 26rpx rgba(0, 0, 0, 0.06);
}
.empty-card-text.data-v-92bb8f34 {
  color: #999;
  font-size: 30rpx;
  line-height: 44rpx;
}

/* 点击态（变浅） */
.empty-card.data-v-92bb8f34:active {
  opacity: 0.88;
}

