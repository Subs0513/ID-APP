.page{padding:20rpx;min-height:100vh;box-sizing:border-box}.card{background:#fff;border-radius:24rpx;padding:22rpx 22rpx;margin-bottom:18rpx;box-shadow:0 8rpx 22rpx rgba(0,0,0,.04)}.header-card .header{display:flex;flex-direction:column;gap:8rpx}.title{font-size:34rpx;font-weight:700;color:rgba(0,0,0,.88)}.sub{font-size:24rpx;color:rgba(0,0,0,.55)}.card-title{display:flex;align-items:center;margin-bottom:16rpx}.card-title-icon{width:34rpx;height:34rpx;margin-right:10rpx}.card-title-text{font-size:28rpx;font-weight:700;color:rgba(0,0,0,.82)}.card-title--with-right{justify-content:space-between}.card-title-left{display:flex;align-items:center}.card-title-right-icon{width:34rpx;height:34rpx;flex:0 0 auto}.grid{display:grid;grid-template-columns:repeat(2,1fr);gap:16rpx 24rpx}.grid-item{background:rgba(255,107,154,.08);border-radius:18rpx;padding:16rpx 16rpx;box-sizing:border-box}.gi-k{display:block;font-size:22rpx;color:rgba(0,0,0,.55)}.gi-v{display:block;margin-top:8rpx;font-size:34rpx;font-weight:800;color:rgba(0,0,0,.85)}.p{margin-top:14rpx;font-size:24rpx;line-height:1.6;color:rgba(0,0,0,.68)}.small{font-size:22rpx;color:rgba(0,0,0,.52)}.risk-list{display:flex;flex-direction:column;gap:12rpx}.risk-item{display:flex;align-items:flex-start;gap:10rpx}.dot{width:12rpx;height:12rpx;margin-top:10rpx;border-radius:999rpx;background:rgba(255,107,154,.9);flex:0 0 auto}.risk-text{font-size:24rpx;line-height:1.6;color:rgba(0,0,0,.74)}.hint{margin-top:14rpx;padding:14rpx 16rpx;border-radius:16rpx;background:rgba(0,0,0,.04);font-size:22rpx;color:rgba(0,0,0,.6)}.chart-sub{font-size:22rpx;color:rgba(0,0,0,.55);margin-bottom:10rpx}.canvas{width:100%;height:240rpx;border-radius:16rpx;overflow:hidden}.legend{margin-top:10rpx;display:flex;flex-direction:column;gap:10rpx}.legend-item{display:flex;align-items:center;gap:10rpx}.legend-color{width:18rpx;height:18rpx;border-radius:6rpx}.legend-text{flex:1;font-size:24rpx;color:rgba(0,0,0,.72)}.legend-val{font-size:24rpx;color:rgba(0,0,0,.55)}.recent{display:flex;flex-direction:column;gap:12rpx}.recent-item{display:flex;align-items:center;justify-content:space-between;padding:14rpx 14rpx;border-radius:18rpx;background:rgba(0,0,0,.03)}.recent-left{display:flex;align-items:baseline;gap:12rpx}.recent-date{font-size:24rpx;font-weight:700;color:rgba(0,0,0,.78)}.recent-time{font-size:22rpx;color:rgba(0,0,0,.55)}.recent-method{font-size:24rpx;color:rgba(0,0,0,.7)}.empty{padding:18rpx 10rpx;text-align:center}.empty-text{display:block;font-size:24rpx;color:rgba(0,0,0,.55);margin-bottom:14rpx}.btn{display:inline-flex;align-items:center;justify-content:center;padding:14rpx 26rpx;border-radius:999rpx;background:rgba(255,107,154,.92);color:#fff;font-size:26rpx;font-weight:700}.chart-wrap{position:relative}.bar-tip{position:absolute;width:92px;padding:6px 8px;border-radius:10px;background:hsla(0,0%,65.9%,.7);box-sizing:border-box}.bar-tip-date{display:block;font-size:11px;color:hsla(0,0%,100%,.92)}.bar-tip-val{display:block;margin-top:2px;font-size:12px;font-weight:700;color:#fff}