/* pages/subperiod/analysis/analysis.wxss */
.page {
  padding: 24rpx 24rpx 28rpx;
  box-sizing: border-box;
}
.card {
  background: #fff;
  border-radius: 22rpx;
  padding: 22rpx 22rpx;
  margin-bottom: 18rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}
.header .title {
  font-size: 40rpx;
  font-weight: 700;
  color: #222;
}
.header .sub {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #888;
}
.card-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 18rpx;
}
.kv {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}
.kv:last-child { border-bottom: none;
}
.k {
  font-size: 28rpx;
  color: #666;
}
.v {
  font-size: 28rpx;
  color: #222;
  max-width: 420rpx;
  text-align: right;
  word-break: break-all;
}
.p {
  font-size: 28rpx;
  color: #333;
  line-height: 1.7;
  margin-top: 10rpx;
}
/* 通用：卡片标题（图标 + 文本） */
.card-title {
  display: flex;
  align-items: center;      /* 垂直居中 */
  gap: 12rpx;               /* 图标与文字间距 */
  margin-bottom: 16rpx;     /* 标题与内容间距 */
}
.card-title-icon {
  width: 34rpx;
  height: 34rpx;
  flex: 0 0 auto;
}
.card-title-text {
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.2;
}
/* 标题左侧一组（图标+文字） */
.card-title-left{
  display: flex;
  align-items: center;
  gap: 12rpx;
}
/* 只有需要右侧图标的标题才用这个类，避免影响别的 card-title */
.card-title--with-right{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
/* 右侧图标 */
.card-title-right-icon{
  width: 18px;
  height: 18px;
  flex: 0 0 auto;
}
/* =========================
   周期变化
   ========================= */
.cycle-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.cycle-head-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.cycle-icon {
  width: 40rpx;
  height: 40rpx;
}
.cycle-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
}
.cycle-arrow {
  width: 34rpx;
  height: 34rpx;
  opacity: 0.55;
}
.cycle-sub {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 18rpx;
}
.cycle-summary {
  background: #fff5f7;
  border-radius: 18rpx;
  padding: 18rpx 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 22rpx;
}
.cycle-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}
.cycle-big {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}
.cycle-num {
  font-size: 54rpx;
  font-weight: 700;
  color: #222;
  line-height: 1;
}
.cycle-tag {
  font-size: 22rpx;
  color: #fff;
  background: #2ecc71;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}
.cycle-delta {
  font-size: 38rpx;
  font-weight: 700;
  color: #222;
}
.cycle-list-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 10rpx;
}
.cycle-item {
  display: flex;
  align-items: center;
  gap: 18rpx;
  margin-top: 14rpx;
}
.cycle-item-left {
  width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: baseline;
  gap: 12rpx;
}
.cycle-date {
  font-size: 26rpx;
  color: #999;
  white-space: nowrap;
}
.cycle-status {
  font-size: 26rpx;
  color: #333;
  white-space: nowrap;
}
.cycle-bar-wrap {
  flex: 1;
  height: 64rpx;
  border-radius: 20rpx;
  background: #f2f2f2;
  overflow: hidden;
  display: flex;
  align-items: center;

  /* 关键：让文字固定定位在容器内部 */
  position: relative;
}
.cycle-bar {
  height: 64rpx;
  border-radius: 20rpx;
  background: #ff6b9a;
}
.cycle-bar-text-fixed {
  position: absolute;
  right: 18rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  font-size: 26rpx;
  font-weight: 600;
  color: #666;
  white-space: nowrap;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.12);
}
/* ====== 行为与风险提示（顶部汇总 + 双柱状图）====== */
.sex-topline {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 10rpx 4rpx 6rpx;
  border-radius: 18rpx;
  background: #fff6f9;
}
.sex-topitem {
  display: flex;
  align-items: baseline;
}
.sex-toplabel {
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}
.sex-topvalue {
  font-size: 56rpx;
  font-weight: 700;
  color: #222;
  line-height: 1;
}
.sex-topunit {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}
.sex-chart {
  display: flex;
  justify-content: space-between;
  margin-top: 18rpx;
  padding: 8rpx 0 2rpx;
}
.sex-group {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sex-cols {
  width: 100%;
  height: 220rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  gap: 18rpx;
  position: relative;
}
.sex-chart {
  position: relative; /* 关键：给伪元素定位 */
  padding-bottom: 10rpx; /* 给横线留位置 */
}
/* 公共横线（贯穿三组） */
.sex-chart::after {
  content: '';
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  /* 数字越大 → 线越往上
  数字越小 → 线越往下 */
  bottom: 50rpx;       /* 让线刚好在文字上方 */
  height: 2rpx;
  background: #cacaca; /* 比之前深一点，更清晰 */
  border-radius: 2rpx;
}
.sex-col {
  width: 62rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}
.sex-num {
  font-size: 26rpx;
  color: #333;
  line-height: 1;
  margin-bottom: 10rpx;
}
.sex-bar {
  width: 100%;
  border-radius: 18rpx;
}
.sex-bar--cur {
  background: linear-gradient(180deg, #ff79a6 0%, #ff5e98 100%);
}
.sex-bar--prev {
  background: #e9e9e9;
}
.sex-xlabel {
  margin-top: 16rpx;   /* 让文字离线更远一点 */
  font-size: 26rpx;    /* 稍微大一点 */
  font-weight: 600;    /* 更清晰 */
  color: #666;         /* 深一点，避免看不清 */
  line-height: 1.2;
}
/* =========================
   体重趋势（基础样式，避免 canvas 塌陷）
   ========================= */
.weight-card { padding-bottom: 20rpx;
}
.weight-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.weight-head-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.weight-icon {
  width: 40rpx;
  height: 40rpx;
}
.weight-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
}
.weight-arrow {
  width: 34rpx;
  height: 34rpx;
  opacity: 0.55;
}
.weight-sub {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 14rpx;
}
.weight-canvas {
  width: 100%;
  height: 240rpx; /* 你后续要画日期/体重标签，这个高度更稳 */
  display: block;
}
.weight-hint {
  margin-top: 10rpx;
  color: #888;
}

